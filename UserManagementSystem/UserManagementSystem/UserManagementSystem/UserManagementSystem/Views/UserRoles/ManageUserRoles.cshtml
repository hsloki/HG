@model IEnumerable<DataDomain.UserRole>

@{
    ViewBag.Title = "ManageUserRoles";
}

<h2>Manage User Roles</h2>
<p>
    @Html.ActionLink("Assign New Role", "AssignNewRole", new { userid= ViewBag.UserId})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserRoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserRoleDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserRoleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRoleDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateModified)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.UserRoleID }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.UserRoleID }) |
            @Html.ActionLink("Delete", "DeleteRoleFromUser", new { ViewBag.UserID, RoleID = item.UserRoleID })
        </td>
    </tr>
}

</table>
